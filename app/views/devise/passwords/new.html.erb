<div class="pattern">
    <span class="red"></span>
    <span class="indigo"></span>
    <span class="blue"></span>
    <span class="green"></span>
    <span class="orange"></span>
</div>
<div class="auth-main particles_js">
    <div class="auth_div vivify popIn">
        <div class="auth_brand m-t-60">
            <a class="navbar-brand" href="javascript:void(0);">
              <%= image_tag "itsme-logo.png", alt: "Login Image", class: "d-inline-block align-top", width: "142", height: "60" %>
            </a>                                                
        </div>
        <div class="card forgot-pass">
            <div class="body">
                  <h3><i class="fa fa-lock fa-4x"></i></h3>
                  <h2 class="text-center">Forgot Password?</h2>
                  <p>You can reset your password here.</p>

                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form", id: "register-form" }) do |f| %> 
                    <%= render "devise/shared/error_messages", resource: resource %>
    
                      <!-- Email Address -->
                      <div class="form-group">
                        <div class="input-group">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                           <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email", placeholder: "Email Address" %>
                        </div>
                      </div>
                      <div class="form-group">
                        <input name="recover-submit" class="btn btn-lg btn-primary btn-block" value="Reset Password" type="submit">
                      </div>
                      
                      <input type="hidden" class="hide" name="token" id="token" value=""> 
                    </form>
                    <% end %>
                    <div class="bottom">
                        <span class="helper-text">Know your password? 
                          <%= link_to "Log In", new_client_user_session_path %>
                        </span>
                    </div>
            </div>
        </div>
    </div>
    <div id="particles-js"></div>
</div>
