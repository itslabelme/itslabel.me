 $(document).ready(function(){

  let countries = {};
  <% ISO3166::Country.all.each do |country| %>
    <%# name = country.translations[I18n.locale.to_s] %>
    countries['<%= country.alpha2 %>'] = '<%= country.country_code %>';
  <% end %>

  $('#INP_COUNTRY').change(function(){

    let selectedCountry = $("#INP_COUNTRY").val();
    console.log(selectedCountry);

    let countryCode = countries[selectedCountry];
    console.log(countryCode);

    $("#INP_COUNTRY_CODE").val(countryCode);

    // $.ajax({
    //   url:"/ajax/#{$('#country_id').val()}/getTimeZone",
    //   type: "GET",
    //    success: function(data){
    //       $("#country_code_id").html(data);
    //   }
    // });
  });
  //Initially disabled button when page loaded.
  $('#btncheck').attr("disabled",true);  
  $('#check').click(function(){
      $('#btncheck').attr("disabled",!$(this).is(":checked"));   
  })

});