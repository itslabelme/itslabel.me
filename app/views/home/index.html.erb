<div class="split left">
  <div class="centered">
    <%= image_tag "demo/admin.png" %>
    <h2 class="mt-4">Login as Admin</h2>
    <p><a href="/admin/login" class="btn btn-primary">Click Here</a></p>
  </div>
</div>
<div class="split right">
  <div class="centered">
    <%= image_tag "demo/user.png" %>
    <h2 class="mt-4">Login as Client</h2>
    <p><a href="/user/login" class="btn btn-primary">Click Here</a></p>
  </div>
</div>

<style>
  body {
    font-family: Arial;
    color: white;
  }
  .split {
    height: 100%;
    width: 50%;
    position: fixed;
    z-index: 1;
    top: 0;
    overflow-x: hidden;
    padding-top: 20px;
  }
  .left {
    left: 0;
    background-color: #ffffff;
    color: #0d8241;
  }
  .right {
    right: 0;
    background-color: #0d8241;
    color: #ffffff;
  }
  .left p a{
    background-color: #0d8241;
    border-color: #0d8241;
  }
  .right p a{
    background-color: #ffffff;
    border-color: #ffffff;
    color: #0d8241;
  }
  .centered {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }
  .centered img {
    width: 150px;
    border-radius: 50%;
  }
</style>