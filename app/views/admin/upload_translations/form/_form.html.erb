

<%
  form_url = admin_upload_translations_url
  # form_url = {action: :csv_parse}
  form_method = :post
%>




<div id="UPLOAD_CSV_FORM" style="padding:20px">

  <%= form_with(url: form_url,  class: "form-floating", multipart: true,  method: form_method) do |f| %>

    


      <!-- Display Errors if Any -->
      <div id="UPLOAD_CSV_FORM_ERRORS">
        <% if @errors %>
          <div class="alert alert-danger">
            <%= @errors %>
          </div>
        <% end %>
      </div>

      <div class="row its-language-switcer mb-2">
        <div class="col-md-12">
          <div class="alert alert-info">
            <p><strong>Please Note the Following:</strong></p>
            <p>* It shoud be a <span class='badge badge-info'>CSV</span> file (Comma Separated File).</p>
            <p>* Only data in <span class='badge badge-info'>first column</span> will be used for translation.</p>
          </div>
        </div>
      </div>

      <!-- File -->
      <div class="row">
        <div class="col-md-12 pb-4 pt-3">
          <div class="form-group row " style="">
            <label class="col-sm-12">Click below to upload from your computer
              <span class="text-color-red px-1">&nbsp;&nbsp;</span>
            </label>
            <div class="col-md-12">
              <%= file_field_tag :file %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3 its-free-language">
          <div class="form-group row " style="">
            <label class="col-sm-12">Input Language</label>
            <div class="col-md-12">
              <div class="input-group">
                <select id="INPUT_LANGUAGE" class="form-control form-control-xs selectpicker1" name="input_language" data-size="7" data-live-search="true" data-title="Location" data-width="100%">
                  <option value="ENGLISH" <%= @input_language == "ENGLISH" ? "selected" : "" %> >English</option>
                  <option value="ARABIC" <%= @input_language == "ARABIC" ? "selected" : "" %> >Arabic</option>
                  <option value="FRENCH" <%= @input_language == "FRENCH" ? "selected" : "" %> >French</option>
                </select>
              </div>
            </div>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-primary"><span class="fa fa-check"></span> Upload </button>


  <% end %>

</div>