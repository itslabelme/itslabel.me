<div class="row clearfix">
  <div class="col-lg-12">
    <div class="input-group" id="adv-search">
      <input type="text" name="q" id="q" class="form-control" placeholder="Search ..." />
      <div class="input-group-btn">
        <div class="btn-group" role="group">
          <div class="dropdown dropdown-lg">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
            <div class="dropdown-menu dropdown-menu-right" role="menu">
              
              <form class="form-horizontal" name="adv_search" action="" method="put" role="form">
                
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="country">Filter by</label>
                      <%= country_select :filters, :country, {priority_countries: [ "US", "GB", "FR", "DE", "AE", "SA", "CN", "IN", "RU" ]}, {class: "form-control", :id => "country_id"}  %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="contain">Phone</label>
                      <input class="form-control" name="filters[mobile_number]" type="text" />
                    </div>
                  </div>
                </div>

                <div class="its-mright">
                  <button type="submit" class="btn btn-primary">Cancel</button>
                  <button type="submit" class="btn btn-primary">Apply</button>
                </div>
              </form>

            </div>
          </div>
          <button type="button" class="btn btn-primary" onclick="search()"><i class="icon-magnifier"></i></button>
        </div>
      </div>
    </div>
  </div>
</div>

<%= content_for :javascript_footer do %>
  <%= render :partial=>"admin/client_users/index/controls.js.erb"  %>
<% end %>