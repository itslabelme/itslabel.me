<div class="row clearfix">
    <div class="col-lg-12">
        <div class="input-group" id="adv-search">
            <input type="text" name="q" id="q" class="form-control" placeholder="Search for snippets" />
            <div class="input-group-btn">
                <div class="btn-group" role="group">
                    <div class="dropdown dropdown-lg">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                        <div class="dropdown-menu dropdown-menu-right" role="menu">
                            <form class="form-horizontal" name="adv_search" action="" method="get" role="form">
                                <div class="form-group">
                                    <label for="filter">Filter by</label>
                                    <%= select_tag :country, options_for_select(ISO3166::Country.all.sort_by { |country| country.name }, params[:country]) , :include_blank => true%>
                                </div>
                                <div class="form-group">
                                    <label for="contain">Phone</label>
                                    <input class="form-control" name="mobile_number" type="text" />
                                </div>
                                <div class="form-group">
                                    <label for="contain">Contains the words</label>
                                    <input class="form-control" name="name" type="text" />
                                </div>
                                <div class="its-mright">
                                    <button type="submit" class="btn btn-primary">Reset</button>
                                    <button type="submit" class="btn btn-primary">Search</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary" onclick="search()"><i class="icon-magnifier"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>
<%= content_for :javascript_footer do %>
  <%= render :partial=>"admin/client_users/index/controls.js.erb"  %>
<% end %>