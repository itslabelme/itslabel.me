<%
  if @admin_user.new_record?
    form_method = :post
    form_url = {action: :create}
  else
    form_method = :put
    form_url = {action: :update}
  end
%>

<%= form_with(url: form_url,  
      class: "form-floating", 
      model: @admin_user,
      method: form_method, 
      html: { autocomplete: "off" }) do |f| %>

  <%= hidden_field_tag "called_from", params[:called_from] %>

  <div class="body mt-2">

    <div class="row clearfix">
      <div class="header p-3 mb-4">
        <h2><%= @admin_user.new_record? ? 'Add a New Admin User' : 'Edit Translation' %></h2>
      </div>
    </div>

    <div class="row clearfix">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <!-- Show Success / Error / Info Messages If any set by the controller action -->
        <%= flash_message(false) if defined?(flash) -%>

        <!-- Display Errors if Any
        <%# if @admin_user.errors.any? %>
        <div id="TRANSLATIONS_NEW_FORM_ERRORS">
          <%#= notify_form_errors(@admin_user) %>
        </div>
        <%# end %>
         -->
      </div>
    </div>

     <div class="row clearfix">
                                  <div class="col-lg-6 col-md-6 col-sm-12">
                                      <div class="form-group">
                                           <% error_class = @admin_user.errors[:first_name].any? ? 'parsley-error' : '' %>
                                          <%= f.text_field :first_name,class: "form-control #{error_class}",placeholder:"First Name *" %>
                                          <%= display_parsley_error(@admin_user, :first_name) %>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <% error_class = @admin_user.errors[:last_name].any? ? 'parsley-error' : '' %>
                                            <%= f.text_field :last_name,class: "form-control #{error_class}",placeholder:"Last Name *"  %>
                                            <%= display_parsley_error(@admin_user, :last_name) %>
                                          </div>
                                      </div>

                                      <div class="col-lg-3 col-md-4 col-sm-12">
                                          <div class="form-group">
                                              <% error_class = @admin_user.errors[:email].any? ? 'parsley-error' : '' %>
                                              <%= f.text_field :email,class: "form-control #{error_class}",placeholder:"email *"  %>
                                               <%= display_parsley_error(@admin_user, :email) %>
                                            </div>
                                        </div>

                                        <% if @admin_user.new_record? %>
                                          <div class="col-lg-3 col-md-4 col-sm-12">
                                              <div class="form-group">
                                                  <% error_class = @admin_user.errors[:password].any? ? 'parsley-error' : '' %>
                                                  <%= f.password_field :password,class: "form-control #{error_class}",placeholder:"Password *" %>
                                                  <%= display_parsley_error(@admin_user, :password) %>
                                                </div>
                                            </div>
                                            <div class="col-lg-3 col-md-4 col-sm-12">
                                                <div class="form-group">
                                                    <% error_class = @admin_user.errors[:password_confirmation].any? ? 'parsley-error' : '' %>
                                                    <%= f.password_field :password_confirmation,class: "form-control #{error_class}",placeholder:"Confirm Password *"  %>
                                                     <%= display_parsley_error(@admin_user, :password_confirmation) %>
                                                  </div>
                                              </div>

                                            <% end %>
                                            <div class="col-lg-3 col-md-4 col-sm-12">
                                                <div class="form-group">
                                                    <% error_class = @admin_user.errors[:mobile_number].any? ? 'parsley-error' : '' %>
                                                    <%= f.text_field :mobile_number,class: "form-control #{error_class}",placeholder:"Mobile No" %>
                                                  </div>
                                              </div>                            

                                              <div class="col-lg-3 col-md-4 col-sm-12">
                                                  <div class="form-group">
                                                      <%= f.text_field :organisation,class: "form-control #{error_class}",placeholder:"Organisation" %>
                                                    </div>
                                                </div>
                                                

                                                </div>
                                            

    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <button type="submit" class="btn btn-primary pull-right ml-2">Save</button>
        
        <button type="button" class="btn btn-secondary pull-right cancel">Cancel</button>
      </div>
    </div>
  </div>

<% end %>


