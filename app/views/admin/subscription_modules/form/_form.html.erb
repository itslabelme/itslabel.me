<%
  if @subscription_module.new_record?
    form_method = :post
    form_url = {action: :create}
  else
    form_method = :put
    form_url = {action: :update}
  end
%>

<%= form_with(url: form_url,  
      class: "form-floating", 
      model: @subscription_module,
      method: form_method, 
      html: { autocomplete: "off" }) do |f| %>

  <%= hidden_field_tag "called_from", params[:called_from] %>

  <div class="body mt-2">

    <div class="row clearfix">
      <div class="header p-3 mb-4">
        <h2>Plan Permissions</h2>
      </div>
    </div>

    <div class="row clearfix">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <!-- Show Success / Error / Info Messages If any set by the controller action -->
        <%= flash_message(false) if defined?(flash) -%>

        <!-- Display Errors if Any
        <%# if @subscription_module.errors.any? %>
        <div id="TRANSLATIONS_NEW_FORM_ERRORS">
          <%#= notify_form_errors(@subscription_module) %>
        </div>
        <%# end %>
         -->
      </div>
    </div>

     <div class="row clearfix">
         
      <div class="col-lg-12 col-md-12 col-sm-12">
          <div class="form-group">
             
              <h5> <%= @subscription.title %></h5>
              <%= f.hidden_field :title,:value => @subscription.title %>
             <%= f.hidden_field :subscription_id,:value => @subscription.id %>
              
                  <%  moduleArray = Array.new
                      @subscription_modules.each_with_index do |mode, i|
                      #@subscription_modules.each do |mode i|
                      moduleArray.push mode['modules_id']
                      end 
                  %>
                   <% rows = 0 %>
              <% @modules.each_with_index do |umodule, j|  %>
              <% if rows % 4==0 %>
               <div class="row ">
                <% end %>
              <div class="col-sm-3">
                  <% if moduleArray.present? %>
                  
                  <% if moduleArray.include?(umodule.id) %>
                  <% @check=true %>
                  <% else %>
                  <% @check=false %>
                  <% end %>
                  <%  end %>
                  
                  <b><%=umodule.title%></b>
                  <%= check_box_tag( 'module_id[]', umodule.id,@check) %>
              
              </div>
               
              <% rows += 1 %>
              <%= raw("</div>") if (rows % 4==0) %>
              <% end %>
              
            </div>
        </div>
                     
         
        
    </div>
                                            

    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <button type="submit" class="btn btn-primary pull-right ml-2">Save</button>
        
        <button type="button" class="btn btn-secondary pull-right cancel">Cancel</button>
      </div>
    </div>
  </div>

<% end %>


