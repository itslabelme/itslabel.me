<%
  if @subscription_module.new_record?
    form_method = :post
    form_url = {action: :create}
  else
    form_method = :put
    form_url = {action: :update}
  end
%>

<%= form_with(url: form_url,  
      class: "form-floating", 
      model: @subscription_module,
      method: form_method, 
      html: { autocomplete: "off" }) do |f| %>

  <%= hidden_field_tag "called_from", params[:called_from] %>

  <div class="body mt-2">

    <div class="row clearfix">
      <div class="header p-3 mb-4">
        <h2><%= @subscription_module.new_record? ? 'Add a New Admin User' : 'Edit Translation' %></h2>
      </div>
    </div>

    <div class="row clearfix">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <!-- Show Success / Error / Info Messages If any set by the controller action -->
        <%= flash_message(false) if defined?(flash) -%>

        <!-- Display Errors if Any
        <%# if @subscription_module.errors.any? %>
        <div id="TRANSLATIONS_NEW_FORM_ERRORS">
          <%#= notify_form_errors(@subscription_module) %>
        </div>
        <%# end %>
         -->
      </div>
    </div>

     <div class="row clearfix">
         
      <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="form-group">
             
              <h5> <%= @subscriptions.title %></h5>
              <%= f.hidden_field :title,:value => @subscriptions.title %>
             <%= f.hidden_field :subscription_id,:value => @subscriptions.id %>
              <% @modules.each_with_index do |umodule, j| %>
              <% @check=false %>
              <div class="col-lg-3 col-md-3 col-sm-12">
                  <% if @subscription_modules[j].present? %>
                  <% if @subscription_modules[j]['id']==umodule.id %>
                  <% @check=true %>
                  <% else %>
                  <% @check=false %>
                  <% end %>
                  <%  end %>
                  <%=umodule.title%>
                  <%= check_box_tag( 'module_id[]', umodule.id,@check) %>
              
              </div>
              <% end %>
            </div>
        </div>
                     
         
        
    </div>
                                            

    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <button type="submit" class="btn btn-primary pull-right ml-2">Save</button>
        
        <button type="button" class="btn btn-secondary pull-right cancel">Cancel</button>
      </div>
    </div>
  </div>

<% end %>


