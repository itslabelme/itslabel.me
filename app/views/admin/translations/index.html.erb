<div class="container-fluid">

  <!-- Header -->
  <%= render partial: 'admin/translations/index/header' %>

  <!-- Controls -->
  <%#=# render partial: 'admin/translations/index/controls' %>

  <div class="row clearfix">
    
    <div class="col-lg-12">
      
      <div class="card">
        <ul class="nav nav-tabs hidden">
          <li class="nav-item"><a class="nav-link active show" data-toggle="tab" href="#TRANSLATIONS_LIST">Translations Database</a></li>
          
          <li class="nav-item"  style='display: none;' id='LI_TRANSLATIONS_NEW_FORM'><a class="nav-link" data-toggle="tab" href="#TRANSLATIONS_NEW_FORM">Add  a Translation</a></li>        
          <li class="nav-item" style='display: none;' id='LI_TRANSLATIONS_EDIT_FORM'><a class="nav-link" data-toggle="tab" href="#TRANSLATIONS_EDIT_FORM">Edit Translation</a></li>  
          <li class="nav-item" style='display: none;' id='LI_TRANSLATIONS_SHOW'><a class="nav-link" data-toggle="tab" href="#TRANSLATIONS_SHOW">View Translation</a></li>        
        </ul>

        <div class="tab-content mt-0">
          <!-- Table -->
          <div class="tab-pane active show" id="TRANSLATIONS_LIST">
            <%= render partial: 'admin/translations/index/controls' %>
            <%= render partial: 'admin/translations/index/table' %>
              <% if @translations.present? %>
              <%= paginate @translations %>
              <% end  %>
          </div>
           
        
          <!-- New Form -->
          <div class="tab-pane" id="TRANSLATIONS_NEW_FORM">
            <%= render partial: 'admin/translations/form/form' %>
          </div>

          <!-- Edit Form -->
          <div class="tab-pane" id="TRANSLATIONS_EDIT_FORM">
          </div>
          <div class="tab-pane" id="TRANSLATIONS_SHOW">
        </div>
          </div>
      </div>
    </div>
  </div>
</div>

<%= content_for :javascript_footer do %>
  <%#= render :partial=>"admin/translations/index/table.js.erb"  %>
<% end %>