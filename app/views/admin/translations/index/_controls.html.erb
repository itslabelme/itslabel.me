
<div class="card">
  <div class="body">
    <div class="input-group" id="adv-search">
      <input type="text" class="form-control ml-3" value="<%= @query %>" name="q" id="q" placeholder="Search..." />
      <div class="input-group-btn mr-2">
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-primary" onclick="search()"><i class="icon-magnifier"></i></button>
          <button type="button" class="btn btn-primary ml-2" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample"><i class="fa fa-filter"></i></button>
        </div>
      </div>

      <div class="col-lg-12 mt-3 collapse show" id="collapseExample">
        <div class="card card-body">
          <form class="form-horizontal" name="adv_search" action="" method="get" role="form">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="filter">Input Phrase</label>
                  <input type="text" value="<%= @input_phrase %>" class="form-control" name="filters[input_phrase]" id="input_phrase">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="filter">Output Phrase</label>
                  <input type="text" value="<%= @output_phrase %>" class="form-control" name="filters[output_phrase]" id="output_phrase">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <div class="form-group">
                  <label for="filter">Input Language</label>
                  <select name="filters[input_language]" class="form-control">
                    <option <%= @input_language ==  'English'? 'selected' : ''%> value="English">English</option>
                    <option <%= @input_language == 'Arabic'? 'selected' : ''%> value="Arabic">Arabic</option>
                    <option <%= @input_language == 'French'? 'selected' : ''%> value="French">French</option>
                    <option <%= @input_language == ''? 'selected' : ''%> value="">All Language</option>
                  </select>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <label for="filter">Output Language</label>
                  <select name="filters[output_language]" class="form-control">
                    <option <%= @output_language ==  'English'? 'selected' : ''%> value="English">English</option>
                    <option <%= @output_language == 'Arabic'? 'selected' : ''%> value="Arabic">Arabic</option>
                    <option <%= @output_language == 'French'? 'selected' : ''%> value="French">French</option>
                    <option <%= @output_language == ''? 'selected' : ''%> value="">All Language</option>
                  </select>
                </div>
              </div>
<!--               <div class="col-md-3">
                <div class="form-group">
                  <label for="filter">Status</label>
                  <select name="filters[status]" class="form-control">
                    <option <%#= @status ==  ''? 'selected' : ''%> value="" selected>All</option>
                    <option <%#= @status ==  'active'? 'selected' : ''%> value="active">Active</option>
                    <option <%#= @status ==  'inactive'? 'selected' : ''%> value="inactive">Inactive</option>
                    <option <%#= @status ==  'removed'? 'selected' : ''%> value="removed">Removed</option>
                    <option <%#= @status ==  'approved'? 'selected' : ''%> value="approved">Approved</option>
                  </select>
                </div>
              </div> -->
              <div class="col-md-3">
                <div class="form-group">
                  <label for="filter">Sort</label>
                  <select name="filters[ob]" class="form-control">
                    <option value="input_phrase_asc" <%= @order_by == 'input_phrase_asc' ? 'selected="selected"' : '' %> >Input Phrase ASC</option>
                    <option value="input_phrase_desc" <%= @order_by == 'input_phrase_desc' ? 'selected="selected"' : '' %> >Input Phrase DESC</option>
                    <option value="created_at_asc"  <%= @order_by == 'created_at_asc' ? 'selected="selected"' : '' %>>Created at ASC</option>
                    <option value="created_at_desc"  <%= @order_by == 'created_at_desc' ? 'selected="selected"' : '' %>>Created at DESC</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="its-mright">
              <button type="submit" class="btn btn-primary">Reset</button>
              <button type="submit" class="btn btn-primary">Apply Filters</button>
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>
<%= content_for :javascript_footer do %>
<%= render :partial=>"admin/translations/index/controls.js.erb"  %>
<% end %>


