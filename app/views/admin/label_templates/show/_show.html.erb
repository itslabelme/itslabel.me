<div class="row clearfix its-upload-container">
  <div class="col-lg-12 col-md-12">
    <div class="card">
      <div class="body" style="background: #f9fdf9;border: 1px solid gainsboro;">
        <div class="mt-2">
            <div class="row">

      <div class="col-sm-12">
        <ul class="list-group felix-ul-table-style">
          <li class="list-group-item">
            <div class="row">
              <div class="col-sm-6"> Template Name :</div>
              <div class="col-sm-6"><b> <%=@label_template.name%></b></div>
            </div>
          </li>
          <li class="list-group-item">
            <div class="row">
              <div class="col-sm-6"> Description :</div>
              <div class="col-sm-6"><b><%= raw @label_template.description %></b></div>
            </div>
          </li>
          <li class="list-group-item">
            <div class="row">
              <div class="col-sm-6"> Preview Image :</div>
              <div class="col-sm-6">
                <% begin %>
                  <% if @label_template.picture.attached? %>
                    <%= image_tag @label_template.picture,size: "250x250" %>
                  <% else %>
                    <% template_img_url = @label_template.get_display_fallback_image_url %>
                    <%= image_tag asset_path(template_img_url), size: "250x250" %>
                  <% end %>
                <% rescue SystemCallError => e %>
                  <% template_img_url = @label_template.get_display_fallback_image_url %>
                  <%= image_tag asset_path(template_img_url), size: "250x250" %>
                <% end %>
              </b></div>
            </div>
          </li>
          <li class="list-group-item">
            <div class="row">
              <div class="col-sm-6"> </div>
              <div class="col-sm-6"></b></div>
            </div>
          </li>
        </ul>
      </div>

      <div class="col-sm-12">
        <ul class="list-group felix-ul-table-style">
          <li class="list-group-item">
            <div class="row">
              <div class="col-sm-6"> Style :</div>
              <div class="col-sm-6"><b><%= raw @label_template.style%></b></div>
            </div>
          </li>
          
          <li class="list-group-item">
            <div class="row">
              <div class="col-sm-6">
                <div style="font-weight:bold;text-align: center;padding:10px;"> LTR HTML  :</div>
                <%= render(partial: 'admin/label_templates/show/iframe', locals: {source_html: @label_template.ltr_html_source}) %>
              </div>
              <div class="col-sm-6">
                <div style="font-weight:bold;text-align: center;padding:10px;"> RTL HTML  :</div>
                <%= render(partial: 'admin/label_templates/show/iframe', locals: {source_html: @label_template.rtl_html_source}) %>
              </div>
            </div>
          </li>
          
          <li class="list-group-item">
            <div class="row">
              <div class="col-sm-6">Show 'NEW' Ribbom? :</div>
              <div class="col-sm-6"><b><%= @label_template.latest ? 'YES' : 'NO' %></b></div>
            </div>
          </li>

          <li class="list-group-item">
            <div class="row">
              <div class="col-sm-6">Created At :</div>
              <div class="col-sm-6"><b><%= @label_template.created_at.strftime("%d %b %Y - %I:%M %p") %></b></div>
            </div>
          </li>
        </ul>
      </div>

    </div>
          
        </div>
      </div>
    </div>
  </div>
</div>



