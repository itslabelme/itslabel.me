<%
  form_url = new_user_client_feedback_url
  form_method = :post
%>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog" id="myModal">  
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header" style="padding: 0px;position: absolute;right: 0px;border: none;top: -24px;right: -20px;color: #fff">
      </button>
      </div>
        <div class="modal-header">
          <h1>Report An Issue</h1>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
    <div class="modal-body">
        <%= form_with(url: form_url,  class: "form-floating",  method: form_method) do |f| %>

      <%= hidden_field_tag :input_language, params[:input_language] %>
      <%= hidden_field_tag :output_language, params[:output_language] %>
      <%= hidden_field_tag :phrase, params[:phrase] %>
       <div class="row">
          <div class="col-md-6">
          <div class="form-group row " style="">
            <label>&nbsp;&nbsp;&nbsp;user :</label>
            <strong style="align-items: center;"><%= @current_client_user.display_name %></strong>        
          </div>
        </div>  
       </div>
      <div class="row">
          <div class="col-md-6">
          <div class="form-group row " style="">
              <label>&nbsp;&nbsp;&nbsp;Date & Time :</label>
              <strong><%= Time.now.strftime("%d/%m/%Y %H:%M %p") %></strong>         
          </div>
        </div>  
       </div>
      
     
       <div class="row">
        <!-- Input -->
        <div class="col-md-6">
          <div class="form-group row " style="">
            <label class="col-sm-12">Input 
            </label>
            <div class="col-md-12">
             <div class="box"><strong >&nbsp;&nbsp;<%=@input_language%></strong></div> 
            </div>
          </div>
        </div>

        <!-- Output -->
        <div class="col-md-6">
          <div class="form-group row " style="">
            <label class="col-sm-12">Output 
            </label>
            <div class="col-md-12">
             <div class="box"><strong >&nbsp;&nbsp;<%=@output_language%></strong></div> 
            </div>
          </div>
        </div>
       <div class="col-md-6">
          <div class="form-group row " style="">
            <label class="col-sm-12">Remarks
              <span class="text-color-red px-1">&nbsp;&nbsp;</span>
            </label>
            <div class="col-md-12">
              <strong><textarea style="height: 100px;width: 400px;"></textarea></strong>
            </div>
          </div>
        </div>
       </div>
        </div>

        <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <button type="submit" class="btn btn-primary"><span class="fa fa-check"></span> Submit </button>
        </div>
      </div>
     <% end %>
   
    </div>
  </div>
  <style>
  .box{
    height: 25px;
    width: 200px;
    border: 1px solid black;
    background-color: solid blue;
    text-align: left;
  }
</style>
