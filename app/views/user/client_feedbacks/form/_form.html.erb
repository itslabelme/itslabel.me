<%
  form_url = user_client_feedbacks_path
  form_method = :post
%>
<%= form_with(url: form_url,  class: "form-floating",  method: form_method) do |f| %>
   <div class="modal-header" >
      <h1>Report An Issue</h1>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
       <div class="row">
         <div class="col-md-6">
          <div class="form-group row " style="">
          <label>&nbsp;&nbsp;&nbsp;user :</label>
          <strong style="align-items: center;"><%= @current_client_user.display_name %></strong>        
          </div>
        </div>  
       </div>
      <div class="row">
       <div class="col-md-6">
        <div class="form-group row " style="">
          <label>&nbsp;&nbsp;&nbsp;Date & Time :</label>
          <strong><%= Time.now.strftime("%d/%m/%Y %H:%M %p") %></strong>         
          </div>
        </div>  
       </div>
      
     
       <div class="row">
        <!-- Input -->
        <div class="col-md-6">
          <div class="form-group row " style="">
            <label class="col-sm-12">Input 
            </label>
            <div class="col-md-12">
               <strong><%= f.text_area :input , :class => "form-controll"%></strong>
            </div>
          </div>
        </div>

        <!-- Output -->
        <div class="col-md-6">
          <div class="form-group row " style="">
            <label class="col-sm-12">Output 
            </label>
            <div class="col-md-12">
               <strong><%= f.text_area :output , :class => "form-controll"%></strong>
            </div>
          </div>
        </div>
       <div class="col-md-6">
          <div class="form-group row " style="">
            <label class="col-sm-12">Remarks
              <span class="text-color-red px-1">&nbsp;&nbsp;</span>
            </label>
            <div class="col-md-12">
               <strong><%= f.text_area :remarks , :class => "form-controll"%></strong>
            </div>
          </div>
        </div>
       </div>
        </div>

      <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "save" , :class =>"btn btn-primary" %>
        </div>
       <% end %>
     