<%
  form_method = :post
  form_url = user_client_feedbacks_path
%>
<%= form_with(url:form_url,class: "form-floating",model:@client_feedback,method:form_method) do |f| %>
    <%= hidden_field_tag :client_user_id, params[:client_user_id] %>

   <div class="modal-header" >
          <h4 class="modal-title">Report An Issue</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body" >
      
     
       <div class="row">
        <!-- Input -->
        <div class="col-md-6" id="input">
           <div class="form-group row " style="">
            <label class="col-sm-6">Input 
            </label>
            <div class="col-md-12">
               <strong><%= f.text_area :input , :value => @input.html_safe ,  :class => "form-controll" , size: "25x5"  %></strong>
            </div>
          </div>
        </div>

        <!-- Output -->
        <div class="col-md-6" id="output">
             <div class="form-group row " style="">
            <label class="col-sm-12">Output 
            </label>
            <div class="col-md-12">
               <strong><%= f.text_area :output , :value => @output.html_safe , :class => "form-controll" , size: "25x5" %></strong>
            </div>
          </div>        

        </div>
       <div class="col-md-6">
          <div class="form-group row " style="">
            <label class="col-sm-12">Remarks
              <span class="text-color-red px-1">&nbsp;&nbsp;</span>
            </label>
            <div class="col-md-12">
               <strong><%= f.text_area :remarks , :class => "form-controll" , size: "60x5" %></strong>
            </div>
          </div>
        </div>
        
      
       </div>
        <div class="row">
         <div class="col-md-6">
          <div class="form-group row " style="">
          <label>&nbsp;&nbsp;&nbsp;user :</label>
          <strong style="align-items: center;"><%= @current_client_user.display_name %></strong>        
          </div>
        </div>  
       <div class="col-md-6">
        <div class="form-group row " style="">
          <label>&nbsp;&nbsp;&nbsp;Date & Time :</label>
          <strong><%= Time.now.strftime("%d/%m/%Y %H:%M %p") %></strong>         
          </div>
        </div>  
       </div>
        </div>

      <div class="modal-footer">
       <button type="submit" class="btn btn-primary"><span class="fa fa-check"></span> Submit </button>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
  <% end %>
     