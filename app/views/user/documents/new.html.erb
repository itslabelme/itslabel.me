<div class="container-fluid">
  <div class="block-header">
    <div class="row clearfix">
      <div class="col-md-6 col-sm-12">
        <h1>New Translation</h1>
        <%  params[:dt] == 'template' ? temp_str = "Template" : temp_str = "Table"  %>
        <p class="pt-2">Create new <%= temp_str %> Based Translation Document</p>
      </div>
      <div class="col-md-6 col-sm-12">
        <nav aria-label="breadcrumb" style="float:right">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Home", user_home_path %></li>
            <li class="breadcrumb-item"><%= link_to "Translations", user_documents_path(dt: "template") %></li>
            <li class="breadcrumb-item active">New Translation</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>

  <div class="row clearfix">
    <div class="col-lg-12">
      <div class="card">
        <div class="body">
          <!-- <h5 class="mb-4">Create a Document</h5> -->

          <% if params[:dt] == 'template' %>
            <%= render partial: 'user/documents/form/template_based_form' %>
          <% else %>
            <%= render :partial=>"user/documents/form/table_based_form" %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

<% if params[:dt] == 'template' %>
<% elsif params[:dt] == 'table' %>
  <div class="container-fluid">
    <div class="row clearfix">
      <div class="col-lg-12">
        <div class="card">
          <br>
          <br>
          <br>
          <br>
          <!-- <h4 align="center">Table Based Under development</h4> -->
        </div>
      </div>
    </div>
  </div>
<% end %>