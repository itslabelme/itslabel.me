<div class="input-group" id="adv-search">
  <input type="text" class="form-control" name="q" value="<%= params[:q] %>" id="q" placeholder="Search..." />
  <div class="input-group-btn">
    <div class="btn-group" role="group">
      <div class="dropdown dropdown-lg">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
        <div class="dropdown-menu dropdown-menu-right" role="menu">
          <form class="form-horizontal" name="adv_search" action="" method="get" role="form">
             <input type="hidden" name="dt" value="<%= params[:dt] %>">
            <div class="row">
              <div class="col-md-3">
                <div class="form-group">
                  <label for="filter">Title</label>
                  <input type="text" class="form-control" name="f_title" id="output_phrase" value="<%= params[:f_title] %>">
                </div>
              </div>
              
              <div class="col-md-3">
                <div class="form-group">
                  <label for="filter">Input Language</label>
                  <select name="f_ilang" class="form-control">
                    <option value="" selected>All</option>
                    <option value="ENGLISH" <%= params[:f_ilang] == "ENGLISH" ? "selected='selected'" : '' %> >English</option>
                    <option value="ARABIC" <%= params[:f_ilang] == "ARABIC" ? "selected='selected'" : '' %>>Arabic</option>
                    <option value="FRENCH" <%= params[:f_ilang] == "FRENCH" ? "selected='selected'" : '' %>>French</option>
                  </select>
                </div>
              </div>

              <div class="col-md-3">
                <div class="form-group">
                  <label for="filter">Output Language</label>
                  <select name="f_olang" class="form-control">
                    <option value="" selected>All</option>
                    <option value="ENGLISH" <%= params[:f_olang] == "ENGLISH" ? "selected='selected'" : '' %> >English</option>
                    <option value="ARABIC" <%= params[:f_olang] == "ARABIC" ? "selected='selected'" : '' %>>Arabic</option>
                    <option value="FRENCH" <%= params[:f_olang] == "FRENCH" ? "selected='selected'" : '' %>>French</option>
                  </select>
                </div>
              </div>

              <div class="col-md-3">
                <div class="form-group">
                  <label for="filter">Status</label>
                  <select name="status" class="form-control">
                    <option value="" selected>All</option>
                    <option value="active">Active</option>
                    <option value="removed">Trashed</option>
                    <option value="archived">Archived</option>
                  </select>
                </div>
              </div>
              
            </div>
            <div class="its-mright">
              <%= link_to "Clear All Filters", user_documents_path(), class: "btn btn-secondary" %>
              <button type="submit" class="btn btn-primary">Search</button>
            </div>
          </form>
        </div>
      </div>
      <button type="button" class="btn btn-primary" onclick="search()"><i class="icon-magnifier"></i></button>
    </div>
  </div>
</div>
<%= content_for :javascript_footer do %>
<%= render :partial=>"user/documents/index/controls.js.erb"  %>
<% end %>