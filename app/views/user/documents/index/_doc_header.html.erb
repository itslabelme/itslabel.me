<div class="block-header">
  <div class="row clearfix">
    <div class="col-md-6 col-sm-12">
      <%
        if params[:status]
          title = "#{params[:status].titleize} Documents"
        else
          title = "Documents"
        end
      %>
      <h2><%= title %></h2>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "Home", user_home_path %></li>
        <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
        </ol>
      </nav>
    </div>            
    <div class="col-md-6 col-sm-12 text-right hidden-xs">
        <div class="dropdown">
          <button class="btn btn-sm btn-primary btn-round" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-angle-down mr-1" data-toggle="tooltip" data-placement="top" title="Add New Document"></i>
            New Document
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <%= link_to "Select from Template", select_template_user_template_documents_path, class: "dropdown-item" %>
            <%= link_to "Table Mode", new_user_table_document_path, class: "dropdown-item" %>
          </div>
        </div>
    </div>
  </div>
</div>