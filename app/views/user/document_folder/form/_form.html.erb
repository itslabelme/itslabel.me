  else
    form_method = :put
    form_url = user_document_folder_path(@folder)
  end
%>

<%= form_with(url: form_url, 
              id: "form_client_users", 
              class: "form-floating", 
              model:@folder,
              method: form_method) do |f| %>

  <%= hidden_field_tag :t, params[:t] %>

