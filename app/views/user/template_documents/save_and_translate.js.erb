<% if @document.errors.blank? %>
  
  <%# if @redirect_to_show_page %>
    // window.location.href = "<%= user_template_document_path(@document) %>";
  <%# end %>

  $(document).ready(function() {
    // Set IFrame Contents
    $("#TEMPLATE_DOCUMENT_SHOW").html("<%= escape_javascript(render(:partial=>'user/template_documents/show/show')) %>")
  }); 

  <%= render(partial: "user/template_documents/show/template.js.erb") %>

  // Showing Growl Like Message
  notifySuccess("<%= escape_javascript(@notification[:title]) %>", "<%= escape_javascript(@notification[:message]) %>");

<% else %>

  // Showing Growl Like Message
  notifyError("<%= escape_javascript(@notification[:title]) %>", "<%= escape_javascript(@notification[:message]) %>");

<% end %>

