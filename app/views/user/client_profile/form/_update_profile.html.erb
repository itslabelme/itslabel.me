<strong style="font-size:16px;">Basic Information</strong>

<%= form_with(url: user_update_client_profile_url,
              class: "form-floating",
              model: @client_user,
              id: current_client_user.id,
              method: :put,
              html: { autocomplete: "off" }) do |f| %>
  
  <!-- Display Errors if Any -->
  <% if @client_user.errors.any? %>
  <div class='alert alert-danger mt-4'>
    Please fix the following errors
  </div>
  <% end %>
  

  <hr>
  <div class="row clearfix mb-3">

    <div class="col-lg-12 col-md-12">
      <div class="form-group">
        <%= f.text_field :first_name,class:"form-control",placeholder:"First Name *" %>
        <%= display_parsley_error(@client_user, :first_name) %>
      </div>
    </div>

    <div class="col-lg-12 col-md-12">
      <div class="form-group">
        <%= f.text_field :last_name,class:"form-control",placeholder:"Last Name *" %>
        <%= display_parsley_error(@client_user, :last_name) %>
      </div>
    </div>

    <div class="col-lg-12 col-md-12">
      <div class="form-group">
        <%= f.text_field :email,class: "form-control ",placeholder:"email *", readonly:"readonly" %>
        <%= display_parsley_error(@client_user, :email) %>
      </div>
    </div>

    <div class="col-lg-12 col-md-12">
      <div class="form-group">
        <%= f.text_field :mobile_number,class: "form-control ",placeholder:"Mobile No" %>
        <%= display_parsley_error(@client_user, :mobile_number) %>
      </div>
    </div>

    <div class="col-lg-12 col-md-12">
      <div class="form-group">
        <%= f.country_select :country, [ "US", "GB", "FR", "DE", "AE", "SA", "CN", "IN", "RU" ], {}, {class: "form-control", :id => "INP_COUNTRY"} %>
        <%= display_parsley_error(@client_user, :country) %>
      </div>
    </div>
    <div class="col-lg-12 col-md-12">
      <div class="form-group">
        <%= f.text_field :organisation,class: "form-control ",placeholder:"Organisation" %>
        <%= display_parsley_error(@client_user, :organisation) %>
      </div>
    </div>

    <div class="col-lg-12 col-md-12">
      <div class="form-group">
        <%= f.text_field :position,class: "form-control ",placeholder:"Position" %>
        <%= display_parsley_error(@client_user, :position) %>
      </div>
    </div>

  </div>

  <button type="submit" class="btn btn-primary pull-right ml-2">Update</button> &nbsp;&nbsp;
  <button type="button" class="btn btn-default pull-right">Cancel</button>

<% end %>