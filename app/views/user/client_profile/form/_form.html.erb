<div class="card">
  <div class="body">
    <div class="row">
      <div class="col-md-6 col-sm-12">

        <div class="row">
          <div class="col-md-1 col-sm-1">
          </div>

          <div class="col-md-11 col-sm-10">
         <%= form_with(url: {action: :update},
                          class: "form-floating",
                          model: @client_user,
                          id:current_client_user.id,
                          method: :put,
                          html: { autocomplete: "off" }) do |f| %>
              
              <!-- Hidden Field Tag -->
              <%= hidden_field_tag "called_from", params[:called_from] %>

              <!-- Flash Message -->
              <%= flash_message(false) if defined?(flash) -%>

              <strong style="font-size:16px;">Basic Information</strong>

              <hr>
              <div class="row clearfix mb-3">
                <div class="col-lg-6 col-md-12">
                  <div class="form-group">
                    <%= f.text_field :first_name,class:"form-control",placeholder:"First Name *" %>
                    
                  </div>
                </div>
                <div class="col-lg-6 col-md-12">
                  <div class="form-group">
                    <%= f.text_field :last_name,class:"form-control",placeholder:"Last Name *" %>
                  </div>
                </div>
                <div class="col-lg-4 col-md-12">
                  <div class="form-group">
                    <%= f.text_field :email,class: "form-control ",placeholder:"email *", readonly:"readonly" %>
                  </div>
                </div>
                <div class="col-lg-4 col-md-12">
                  <div class="form-group">
                    <%= f.text_field :mobile_number,class: "form-control ",placeholder:"Mobile No" %>
                  </div>
                </div>
              </div>

              <button type="submit" class="btn btn-primary">Update</button> &nbsp;&nbsp;
              <button type="button" class="btn btn-default">Cancel</button>

            <% end %>
          </div>

          <div class="col-md-1 col-sm-1">
          </div>
        </div>

      </div>

      <div class="col-md-6 col-sm-12">

        <div class="row">
          <div class="col-md-1 col-sm-1">
          </div>

          <div class="col-md-11 col-sm-10">

            <%= form_for(@client_user, :url => {action: :update_client_password} ) do |f| %>

              <!-- Hidden Fields -->
              <%= hidden_field_tag "called_from", params[:called_from] %>

              <!-- Flash Message -->
              <%= flash_message(false) if defined?(flash) -%>

              <strong style="font-size:16px;">Change Password</strong>

              <hr>
              <div class="row clearfix mb-3">

                <%= f.hidden_field :first_name,class:"form-control",placeholder:"First Name *" %>

                <%= f.hidden_field :last_name,class:"form-control",placeholder:"Last Name *" %>

                <%= f.hidden_field :email,class: "form-control ",placeholder:"email *"  %>

                <%= f.hidden_field :mobile_number,class: "form-control ",placeholder:"Mobile No" %>

                <div class="col-lg-12 col-md-12">
                  <div class="form-group">
                    <%= f.password_field :current_password,class: "form-control ",placeholder:"Password *" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, :autocomplete => "off", class: "form-control", placeholder: "New Password" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, :autocomplete => "off", class: "form-control", placeholder: "New Password Confirmation" %>
                  </div>
                </div>
              </div>

              <button type="submit" class="btn btn-primary">Update</button> &nbsp;&nbsp;
              <button type="button" class="btn btn-default">Cancel</button>

            <% end %>

          </div>

          <div class="col-md-1 col-sm-1">
          </div>
        </div>

      </div>
    </div>
  </div>
</div>



