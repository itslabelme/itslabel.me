<%
  if @user_subscriptions.new_record?
    form_method = :post
    form_url = {action: :create}
  else
    form_method = :put
    id=@user_subscriptions.id
    form_url = "/user/user_subscriptions/#{@user_subscriptions.id}"
  end
%>



<%= form_for @user_subscriptions, :as => :user_subscriptions,:method=>form_method ,:url => form_url do |f| %>
  <%= hidden_field_tag "called_from", params[:called_from] %>

  <div class="body mt-2">

    <div class="row clearfix">
      <div class="header p-3 mb-4">
        <h2><%= @user_subscriptions.new_record? ? 'Add SUbscription' : 'Edit Subscription' %></h2>
      </div>
    </div>

    <div class="row clearfix">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <!-- Show Success / Error / Info Messages If any set by the controller action -->
        <%= flash_message(false) if defined?(flash) -%>

        <!-- Display Errors if Any
        <%# if @admin_user.errors.any? %>
        <div id="TRANSLATIONS_NEW_FORM_ERRORS">
          <%#= notify_form_errors(@admin_user) %>
        </div>
        <%# end %>
         -->
      </div>
    </div>
       <%= f.hidden_field :user_id, :value => @current_client_user.id %>
     <div class="row clearfix">
          <% if @subscriptions.present? %>
      <% @subscriptions.each_with_index do |subscription, i| %>
      <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="form-group">
               <% error_class = @user_subscriptions.errors[:subscription_id].any? ? 'parsley-error' : '' %>
              <%= subscription.title %>
              <%#=  puts @user_subscription.inspect %>
              <%= f.radio_button :subscription_id,subscription.id,:checked =>(@user_subscriptions.subscription_id == subscription.id) %>
              <%= display_parsley_error(@user_subscriptions, :subscription_id) %>
            </div>
        </div>
                     
              <%  end %>
         <% end %>
        
    </div>
                                            

    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <button type="submit" class="btn btn-primary pull-right ml-2">Save</button>
        
        <button type="button" class="btn btn-secondary pull-right cancel">Cancel</button>
      </div>
    </div>
  </div>

<% end %>



